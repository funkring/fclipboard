<?xml version='1.0' encoding='utf-8'?>
<widget id="net.funkring.Fclipboard" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Fclipboard</name>
    <description>
        Fclipboard ein digitales Clipboard das mit Odoo synchronisiert
    </description>
    <author email="dev@funkring.net" href="http://www.funkring.net">
        Funkring.net Inh. Martin Reisenhofer
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="BackupWebStorage" value="none"/>
</widget>
